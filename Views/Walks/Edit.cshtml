@model DogGo.Models.Walk

@{
    Layout = Layout;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Walk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="WalkDogs" class="control-label">Dogs</label>
                <select asp-for="WalkDogs" class="form-control" asp-items="ViewBag.DogId" multiple="multiple"></select>
                <span asp-validation-for="WalkDogs" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="WalkerId" class="control-label">Walker</label>
                <select asp-for="WalkerId" class="form-control" asp-items="ViewBag.WalkerId"></select>
                <span asp-validation-for="WalkerId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Duration" class="control-label">Duration (Minutes)</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>

