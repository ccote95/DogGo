@model DogGo.Models.Walk

@{
    Layout = Layout;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Walk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SelectedDogIds" class="control-label">Select Dogs</label>
                <select asp-for="SelectedDogIds" class="form-control" asp-items="ViewBag.DogName" multiple="multiple"></select>
                <span asp-validation-for="SelectedDogIds" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="WalkerId" class="control-label">Select Walker</label>
                <select asp-for="WalkerId" class="form-control" asp-items="ViewBag.WalkerName"></select>
                <span asp-validation-for="WalkerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Duration" class="control-label">Duration (Minutes)</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
